{
  "name": "MySQL Cron Backup",
  "version": "0.0.20",
  "slug": "mysql-cron-backup",
  "legacy": false,
  "init": false,
  "description": "Addon to routinely back up a remote MySQL Database.",
  "url": "https://github.com/PrimusNZ/addon-mysql-cron-backup",
  "startup": "services",
  "arch": [
    "aarch64",
    "amd64",
    "armhf"
  ],
  "map": [
    "media:rw"
  ],
  "boot": "auto",
  "options": {
    "cron_time": "0 3 * * sun",
    "backup_folder": "/media/Backups/MySQL",
    "max_backups": 30,
    "mysql_host": "localhost",
    "mysql_user": "admin",
    "mysql_pass": "admin",
    "mysql_port": 3306,
    "mysql_db": "homeassistant",
    "compress_backup": true,
    "TZ": "Pacific/Auckland",
    "gzip_level": 6,
    "mysqldump_opts": "--quick"
  },
  "schema": {
    "cron_time": "str",
    "backup_folder": "str",
    "max_backups": "int",
    "mysql_host": "str",
    "mysql_port": "int",
    "mysql_user": "str",
    "mysql_pass": "str",
    "mysql_db": "str",
    "compress_backup": "bool",
    "gzip_level": "int",
    "mysqldump_opts": "str?",
    "mysql_ssl_opts": "str?",
    "TZ": "str"
  },
  "image": "ghcr.io/primusnz/hassio-addons/{arch}-mysql-cron-backup"
}
